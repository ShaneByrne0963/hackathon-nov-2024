{
  "name": "Web Accessor-Ease",
  "version": "1.0.1",
  "description": "A browser extension to address website accessibility issues limiting fully diversified inclusivity",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icons/icon16.ico",
    "32": "assets/icons/icon32.ico",
    "48": "assets/icons/icon48.ico",
    "128": "assets/icons/icon128.ico"
  },
  "author": "The Accessibles",
  "action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "index.html",
    "default_title": "Web Accessor-Ease"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["hover-styles.js", "line-spacing.js", "ruler.js", "split-paragraphs.js", "update-color.js", "background-images.js", "font.js", "palettes.js", "script.js"],
    "css": ["assets/css/main.css"]
  }]
}
